<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.automaatio.controller.mainpage.DeviceController">
    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <VBox fillWidth="true" spacing="10.0" BorderPane.alignment="CENTER">
                <children>
                    <HBox spacing="10.0">
                        <children>
                            <TextField fx:id="deviceNameField" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308" text="DeviceName">
                                <HBox.margin>
                                    <Insets left="100.0" />
                                </HBox.margin>
                                <font>
                                    <Font name="Copperplate Gothic Bold" size="18.0" />
                                </font>
                            </TextField>
                            <Button fx:id="changeNameButton" mnemonicParsing="false" prefHeight="26.0" text="Change name" />
                        </children>
                    </HBox>
                    <VBox spacing="10.0">
                        <TextField fx:id="modelCode" VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308" promptText="Enter model code">
                            <VBox.margin>
                                <Insets left="100.0" right="100.0"/>
                            </VBox.margin>
                        </TextField>
                        <ComboBox fx:id="deviceGroup" VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308" promptText="Enter device group">
                            <VBox.margin>
                                <Insets left="100.0" right="100.0"/>
                            </VBox.margin>
                        </ComboBox>
                        <TextField fx:id="usageData" VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308" promptText="Enter usage data">
                            <VBox.margin>
                                <Insets left="100.0" right="100.0"/>
                            </VBox.margin>
                        </TextField>
                    </VBox>
                </children>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
