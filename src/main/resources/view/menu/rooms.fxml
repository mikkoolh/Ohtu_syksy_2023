<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.automaatio.controller.mainpage.menu.RoomsController">
    <children>
        <VBox fx:id="roomsVBox" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox prefHeight="30.0" spacing="10.0">
                    <children>
                        <TextField fx:id="newRoomTextField" prefHeight="34.0" prefWidth="250.0" promptText="Room name" />
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#onAddGroupClick" prefHeight="34.0" prefWidth="78.0" text="Add" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <ScrollPane fx:id="roomsScrollPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
                    <VBox fx:id="roomsVBox2" />
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
