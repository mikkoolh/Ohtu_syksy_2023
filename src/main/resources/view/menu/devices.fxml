<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.automaatio.controller.mainpage.menu.DevicesController"
            minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
    <children>
        <HBox spacing="10" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <TextField fx:id="deviceNameField" prefHeight="34.0" prefWidth="310.0" promptText="Device name" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addDevice" prefHeight="34.0" prefWidth="78.0" text="Add" />
        </HBox>
        <ScrollPane fx:id="devicesScrollPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <VBox fx:id="devicesVBox" />
        </ScrollPane>
    </children>
</AnchorPane>
